</div>
<div class="table">
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                @{
                    foreach(var head in TableHeaders)
                    {
                    <th colspan="4">
                        
                        @head
                    </th>
                    <th>
                    @Html.ActionLink("Create", "Create", new{@class="btn btn-primary"})
                    </th>
                        
                    }
                }
            </tr>
        </thead>
        @{
            if(Model != null)
            {
                foreach (var Data in Model)
                {

                    <tr>
                        <td>
                        Item: @Data.MenuItemId
                        </td>

                        <td>
                        <b>@Data.Name</b>
                        </td>

                        <td>
                        @Data.NumberOfCalories Calories
                        </td>

                        <td>
                        @Data.Price
                        </td>

                        <td>
                            @Html.ActionLink("Edit", "Edit", new {  id=Data.MenuItemId  }, new{@class="btn btn-primary"})
                        </td>

                    </tr>
                    <tr>
  
                        <td>
                        @Data.IsVegan
                        </td>
                        
                        <td>
                        @Data.IsVegeterian
                        </td>

                        <td colspan="2">
                        @Data.Description
                        </td>

                        

                    </tr>
                }
            }
        }
    </table>
    <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="SubMenu">Check out allergy and ingredient information here!</a>

</div>