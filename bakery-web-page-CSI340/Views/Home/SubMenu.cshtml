@{
    ViewData["Title"] = "Allergen Information";
    string[] TableHeaders = new string[]
            {
      "Allergen and Ingredient Information"
    };
}
<div class= "text-center" >
 <h1 class= "display-4" > Allergy and Ingredient Information</h1>


    <h3>If you have any questions or concerns contact us <a href="/Home/ContactUs">here!</a></h3>


</div>
<div class="table">
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                @{
                    foreach(var head in TableHeaders)
                    {
                    <th colspan="3">
                       <b>@head</b> 
                    </th>
                        
                    }
                }
            </tr>
        </thead>
        @{
            //MenuItemId MenuItemName IngredientName IngredientType IsAllergen
            if(Model != null)
            {
                string ID = " ";
                foreach (var Data in Model)
                {
                    
                    
                    if(@Data.MenuItemId != ID)
                    {
                        <tr>
                        <td colspan="3">
                        <b>@Data.MenuItemName</b> contains:
                        </td>
                        </tr>
                        ID = @Data.MenuItemId;
                    }
                    
                    
                    <tr>
                        <td>
                        @Data.IngredientName
                        </td>
                        <td>
                        @Data.IngredientType
                        </td>
                        <td>
                        @Data.IsAllergen
                        </td>

                    </tr>
                }
            }
        }
    </table>

</div>